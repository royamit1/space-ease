datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

model ParkingSpot {
  id          Int      @id @default(autoincrement())
  userId      String // insert the userId with supabase.auth
  latitude    Float
  longitude   Float
  address     String
  description String
  hourlyRate  Int
  startTime   DateTime
  endTime     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
